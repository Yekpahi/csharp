<Window x:Class="GuiXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiXaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="mybtt" Width="160" Margin="30"  FontSize="32" Click="mybtt_Click" ClickMode="Press">
            Click Me
        </Button>
        <Label FontSize="32" Name="mylb" Width="200"  Background="Yellow" Foreground="black" >Hello World</Label>
    </StackPanel>
</Window>
