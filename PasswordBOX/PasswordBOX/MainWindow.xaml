<Window x:Class="PasswordBOX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBOX"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel Margin="20">
        <Label FontSize="25"> Name : </Label>
        <TextBox FontSize="25" ></TextBox>
        <Label FontSize="25" >Password :</Label>
        <PasswordBox FontSize="25" PasswordChar="*" Background="Aqua" BorderThickness="2" BorderBrush="Black"></PasswordBox>
    </StackPanel>
</Window>
