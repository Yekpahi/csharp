        xmlns:local="clr-namespace:WFPHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>

        <StackPanel>
            <Button x:Name="myButt"
                Content="Salut les gars"
         
         />
